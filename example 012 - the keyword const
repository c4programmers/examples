/* example 012 - the keyword const */
#include <stdio.h>

int main(void)
{
   const float VAT = 20;
   float amount;

   printf("Enter the sales price including tax: ");
   scanf("%f", &amount);

   printf("The net amount = %.2f\n", amount/1.2);
   printf("The VAT = %.2f\n", amount - (amount/1.2));

   return 0;
}
