/* example 017 - global and local Variables */
#include <stdio.h>

int i=2;    			// global Variable i=2

void add(void) {
   int result = i+i;    		// local Variable result = 4
   printf("result = %d\n", result);
}

int main(void)
{
   add();      			// calls Function add()

   int result = 5 * i;  		// result = 10

   printf("result = %d\n", result);
   return 0;
}
