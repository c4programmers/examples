/* example 145 â€“ basic calculator */
#include <stdio.h>

int main (void)
{
   double num1, num2;
   printf("Basic calculator\n\n");
   printf("Enter the first number: ");
   scanf("%lf",&num1);
   printf("Enter the second number: ");
   scanf("%lf",&num2);
   printf("\n%f + %f = %.4f",num1, num2, num1 + num2);
   printf("\n%f - %f = %.4f",num1, num2, num1 - num2);
   printf("\n%f * %f = %.4f",num1, num2, num1 * num2);
   printf("\n%f / %f = %.4f",num1, num2, num1 / num2);
   return 0;
}
