/* example 168 â€“ check a file for existence */
#include <stdio.h>

int main(void)
{
   FILE *fptr;

   char *file = "c:\\CProgramming\\helloWorld\\testfile.txt";

   fptr = fopen(file,"r");

   if (fptr != NULL) {
      printf("\nFile exists!");
      fclose(fptr);
   }

   else
      printf("\nFile does not exist!");

   return 0;
}
