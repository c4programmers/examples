/* example 061 – convert °C to kelvin */
#include <stdio.h>

int main(void)
{
   double temperature, kelvin;

   printf("Enter a temperature in degree Celsius: ");
   scanf("%lf",&temperature);

   if (temperature >= -273.15) {
      kelvin = temperature + 273.15;
      printf("%2.lf degrees Celsius are %2.lf degrees Kelvin",temperature, kelvin);
   }
   else
      printf("\nYou entered a wrong number!");

   return 0;
}
