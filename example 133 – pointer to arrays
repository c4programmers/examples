/* example 133 â€“ pointer to arrays */
#include <stdio.h>

int main (void)
{
    int ivar[] = {2, 8, 5, 9};
    int *iptr;

    iptr = ivar; // ivar is an array, therefore we need no address operator &

    for (int i = 0; i < 4; i++) {
        printf("Address of ivar[%d] = %p\n", i, iptr );
        printf("Value of ivar[%d] = %d\n", i, *iptr );

        iptr ++; // move to the next position
    }
    return 0;
}
